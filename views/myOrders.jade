doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title My Orders
    // fontawesome link here
    link(rel='stylesheet', href='fontawesome-free-5.15.3-web/css/all.min.css')
    // style link here
    link(rel='stylesheet', href='style.css')
    style.
      .checkout-form {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      border: 1px solid #ccc;
      }
      .checkout-form h2 {
      margin-bottom: 20px;
      }
      .checkout-form .form-group {
      margin-bottom: 20px;
      }
      .checkout-form label {
      display: block;
      font-weight: 700;
      margin-bottom: 5px;
      }
      .checkout-form .form-control {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
      }
      .checkout-form button {
      background-color: #0095f6;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 10px;
      font-size: 16px;
      margin-top: 20px;
      cursor: pointer;
      }
  body
    header.header
      .logo
        img(src='images/logo.png', alt='')
      nav.navbar
        a(href='index.html') home
        a(href='menu.html') menu
        a(href='contact.html') contact
        a(href='myOrders.html') myOrders
      .icons
        #menu-bar.fas.fa-bars
        a.login-btn(href='#') Login
        a.sign.up-btn(href='#') Sign up
    .our-menu-food
      h1.menu-title My Orders
      .order-container
        .order-item
          // Bild på maträtten
          .order-img
            img.menu-img(src='easy-choc-hazelnut-pancakes-160639-1.jpg', alt='')
          // Information om maträtten
          .order-details
            h3.menu-item Easy choc-hazelnut pancakes
            p.menu-price Price: $1.2
            p.menu-quantity Quantity: 3
        .order-item
          // Bild på maträtten
          .order-img
            img.menu-img(src='pancakes-158342-3.jpg', alt='')
          // Information om maträtten
          .order-details
            h3.menu-item Fluffy American style pancakes
            p.menu-price Price: $1.2
            p.menu-quantity Quantity: 1
    // Beställningsformulär
    form.checkout-form(action='#')
      h2 Checkout
      .form-group
        label(for='name') Fullst&auml;ndigt namn
        input#name.form-control(type='text', name='name', placeholder='Ange ditt namn', required='')
      .form-group
        label(for='email') E-postadress
        input#email.form-control(type='email', name='email', placeholder='Ange din e-postadress', required='')
      .form-group
        label(for='phone') Telefonnummer
        input#phone.form-control(type='tel', name='phone', placeholder='Ange ditt telefonnummer', required='')
      .form-group
        label(for='address') Adress
        input#address.form-control(type='text', name='address', placeholder='Ange din adress', required='')
      .form-group
        label(for='postcode') Postnummer
        input#postcode.form-control(type='text', name='postcode', placeholder='Ange ditt postnummer', required='')
      .form-group
        label(for='card-name') Namn p&aring; kortet
        input#card-name.form-control(type='text', name='card-name', placeholder='Ange namnet på kortet', required='')
      .form-group
        label(for='card-number') Kortnummer
        input#card-number.form-control(type='text', name='card-number', placeholder='Ange kortnumret', required='')
      .form-group
        label(for='expiry-date') Utg&aring;ngsdatum
        input#expiry-date.form-control(type='text', name='expiry-date', placeholder='MM / ÅÅ', required='')
      .form-group
        label(for='cvv') CVV
        input#cvv.form-control(type='text', name='cvv', placeholder='Ange CVV', required='')
      h2 Total: $2.4
      button(type='submit') Bekr&auml;fta best&auml;llning
    .before
      img(src='images/before footer.png', alt='')
    .footer
      .main-footer
        .footer-logo
          img(src='images/footerlogo.png', alt='')
      footernav.footer-navbar
        a(href='index.html') home
        a(href='menu.html') menu
        a(href='contact.html') contact
        a(href='myOrders.html') myOrders